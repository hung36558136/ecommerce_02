<div class="modal fade" id="md-edit-category-<%= category[:id] %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title"><%= t ".header_modal" %></h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal form-create">
          <div class="form-group">
            <label for="category_select" class="lbl_category_select col-sm-4">
              <%= t ".parent_category" %>
            </label>
            <div class="col-sm-8">
              <%= select_tag "parent_id", options_for_select(
                nested_set_options(Category) { |category|
                  "#{'-' * category.level} #{category.name}" },
                selected: category[:parent_id]),
                {class: "category_select form-control",
                  id: "category_select_#{category[:id]}",
                  include_blank: t(".none")} %>
            </div>
          </div>
          <div class="form-group">
            <label for="name" class="lbl_name col-sm-4">
              <%= t ".name" %>
            </label>
            <div class="col-sm-8">
              <input type="text" id="name-<%= category.id %>"
                value="<%= category.name %>" class="form-control">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default"
          id="btn-save-<%= category.id %>">
          <%= t ".save" %>
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t ".cancel" %>
        </button>
      </div>
    </div>
  </div>
</div>
