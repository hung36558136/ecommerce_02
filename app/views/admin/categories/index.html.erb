<%= stylesheet_link_tag "admin/categories/index" %>

<div class="content-categories">
  <button class="btn btn-default" id="btn-create-category">
    <%= t ".create" %>
  </button>
  <div class="modal fade" id="md-create-category" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title"><%= t ".header_modal" %></h4>
        </div>
        <div class="modal-body">
          <form class="form-horizontal form-create">
            <div class="form-group">
              <label for="category_select" class="lbl_category_select col-sm-4">
                <%= t ".parent_category" %>
              </label>
              <div class="col-sm-8">
                <%= render partial: "category_select" %>
              </div>
            </div>
            <div class="form-group">
              <label for="name" class="lbl_name col-sm-4">
                <%= t ".name" %>
              </label>
              <div class="col-sm-8">
                <input type="text" id="name" class="form-control">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default" id="btn-save">
            <%= t ".save" %>
          </button>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t ".cancel" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "admin/category" %>
