<% @manufacturers.each_with_index do |manu, index| %>
  <tr>
    <td>
      <% params[:page] ||= "1" %>
      <%= get_index params[:page], index, Settings.manu.perpage %>
    </td>
    <td><%= manu.name %></td>
    <td><%= manu.created_at %></td>
    <td>
      <button type="button" class="btn btn-info btn-view-manu"
        id="<%= manu.id %>">
        <%= t ".edit" %>
      </button>
    </td>
    <td>
      <%= link_to t(".delete"), admin_manufacturer_path(manu),
        method: :delete, data: { confirm: "Are you sure?" },
        class: "btn btn-primary btn-delete-manu" %>
    </td>
  </tr>
  <%= form_tag admin_manufacturers_path , method: :put,
    id: "edit-manu-form" do %>
    <div class="modal fade" id="manu-modal-<%= manu.id %>" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
            <h4>
              <span class="glyphicon glyphicon-lock"></span>
              <%= t ".manu" %>
            </h4>
          </div>
          <div class="modal-body">
            <form role="form">
              <%= hidden_field_tag "id", manu.id %>
              <div>
                <label class="view-user-title">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".name" %>
                </label>
                <%= text_field_tag :name, params[:name], value: manu.name,
                  class: "form-control manu-name" %>
              </div>
              <%= submit_tag t(".update"), class: "btn btn-success btn-block"%>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger btn-default pull-left"
              data-dismiss="modal">
              <%= t ".cancel" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
